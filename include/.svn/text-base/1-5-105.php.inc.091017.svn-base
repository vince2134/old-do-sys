    $sql .= "                       main_staff_id AS staff_id \n";
    $sql .= "                   FROM \n";
    $sql .= "                       t_sale_h_amount \n";
    $sql .= "                   WHERE \n";
    $sql .= "                       shop_id = $shop_id \n";
    if ($renew_type == "daily"){
    $sql .= "                   AND \n";
    $sql .= "                       renew_flg = 'f' \n";
    }else
    if ($renew_type == "halfway"){
    $sql .= "                   AND \n";
    $sql .= "                       renew_flg = 't' \n";
    }
    $sql .= "                   AND \n";
    $sql .= "                       sale_day >= '$monthly_renew_day' \n";
    $sql .= "                   AND \n";
    $sql .= "                       sale_day <= '$end_day' \n";
    $sql .= "               ) \n";
    $sql .= "               UNION ALL \n";
    $sql .= "               ( \n";
    $sql .= "                   SELECT \n";
    $sql .= "                       shop_id, \n";
    $sql .= "                       c_staff_id AS staff_id \n";
    $sql .= "                   FROM \n";
    $sql .= "                       t_buy_h \n";
    $sql .= "                   WHERE \n";
    $sql .= "                       shop_id = $shop_id \n";
    if ($renew_type == "daily"){
    $sql .= "                   AND \n";
    $sql .= "                       renew_flg = 'f' \n";
    }else
    if ($renew_type == "halfway"){
    $sql .= "                   AND \n";
    $sql .= "                       renew_flg = 't' \n";
    }
    $sql .= "                   AND \n";
    $sql .= "                       buy_day >= '$monthly_renew_day' \n";
    $sql .= "                   AND \n";
    $sql .= "                       buy_day <= '$end_day' \n";
    $sql .= "               ) \n";
    $sql .= "               UNION ALL \n";
    $sql .= "               ( \n";
