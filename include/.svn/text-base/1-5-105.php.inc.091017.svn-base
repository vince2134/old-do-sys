// FROM attach
function Total_Amount_Attach_Sql($renew_type, $staff_id, $shop_id, $monthly_renew_day, $end_day){

    $sql  = "   ( \n";
    $sql .= "       SELECT \n";
    $sql .= "           t_shop_union.shop_id \n";
    $sql .= "       FROM \n";
