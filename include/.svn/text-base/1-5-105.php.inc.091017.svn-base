// FROM buy
function Total_Amount_Buy_Sql($renew_type, $staff_id, $shop_id, $monthly_renew_day, $end_day){

    if ($renew_type == "notax"){
        $amount_col = "COALESCE(t_buy_h.net_amount, 0)";
    }else   
    if ($renew_type == "tax"){ 
        $amount_col = "COALESCE(t_buy_h.tax_amount, 0)";
    }else   
    {
        $amount_col = "COALESCE(t_buy_h.net_amount, 0) + COALESCE(t_buy_h.tax_amount, 0)";
    }

    $sql  = "   LEFT JOIN \n";
    $sql .= "   ( \n";
    $sql .= "       SELECT \n";
    $sql .= "           shop_id, \n";
    $sql .= "           SUM( \n";
    $sql .= "               CASE \n";
    $sql .= "                   WHEN \n";
    $sql .= "                       trade_id IN (71, 21, 25) \n";
    $sql .= "                   THEN \n";
    $sql .= "                       ($amount_col) * 1 \n";
    $sql .= "                   WHEN \n";
    $sql .= "                       trade_id IN (73, 74, 23, 24) \n";
    $sql .= "                   THEN \n";
    $sql .= "                       ($amount_col) * -1 \n";
    $sql .= "                   ELSE 0 \n";
    $sql .= "               END \n";
    $sql .= "           ) \n";
    $sql .= "           AS buy_amount \n";
    $sql .= "       FROM \n";
    $sql .= "           t_buy_h \n";
    $sql .= "       WHERE \n";
    $sql .= "           shop_id = $shop_id \n";
    if ($renew_type == "daily"){
    $sql .= "       AND \n";
    $sql .= "           renew_flg = 'f' \n";
    }else
    if ($renew_type == "halfway"){
    $sql .= "       AND \n";
    $sql .= "           renew_flg = 't' \n";
    }
    $sql .= "       AND \n";
    $sql .= "           buy_day >= '$monthly_renew_day' \n";
    $sql .= "       AND \n";
    $sql .= "           buy_day <= '$end_day' \n";
    $sql .= "       GROUP BY \n";
    $sql .= "           shop_id \n";
    $sql .= "   ) \n";
    $sql .= "   AS t_buy_data \n";
    $sql .= "   ON t_attach_staff.shop_id = t_buy_data.shop_id \n";

    // クエリを返す
    return $sql;

}

