function Get_Total_Amount($db_con, $renew_type, $staff_id, $shop_id, $monthly_renew_day, $end_day){

    $sql  = "SELECT \n";
    $sql .=     Total_Amount_Select_Sql ($staff_id);
    $sql .= "FROM \n";
    $sql .=     Total_Amount_Attach_Sql ($renew_type, $staff_id, $shop_id, $monthly_renew_day, $end_day);
    $sql .=     Total_Amount_Sale_Sql   ($renew_type, $staff_id, $shop_id, $monthly_renew_day, $end_day);
    $sql .=     Total_Amount_Payin_Sql  ($renew_type, $staff_id, $shop_id, $monthly_renew_day, $end_day);
    $sql .=     Total_Amount_Buy_Sql    ($renew_type, $staff_id, $shop_id, $monthly_renew_day, $end_day);
    $sql .=     Total_Amount_Payout_Sql ($renew_type, $staff_id, $shop_id, $monthly_renew_day, $end_day);
    $sql .= ";";
    $res_total = Db_Query($db_con, $sql);
    $num_total = pg_num_rows($res_total);
    $ary_total = Two_To_Linear(Get_Data($res_total));

    return $ary_total;

}


