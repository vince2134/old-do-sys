    if ($renew_type == "daily"){
    $sql .= "                   AND \n";
    $sql .= "                       renew_flg = 'f' \n";
    }else
    if ($renew_type == "halfway"){
    $sql .= "                   AND \n";
    $sql .= "                       renew_flg = 't' \n";
    }
    $sql .= "                   AND \n";
    $sql .= "                       sale_id IS NULL \n";
    $sql .= "                   AND \n";
    $sql .= "                       pay_day >= '$monthly_renew_day' \n";
    $sql .= "                   AND \n";
    $sql .= "                       pay_day <= '$end_day' \n";
    $sql .= "               ) \n";
    $sql .= "               UNION ALL \n";
    $sql .= "               ( \n";
    $sql .= "                   SELECT \n";
    $sql .= "                       shop_id, \n";
    $sql .= "                       c_staff_id AS staff_id \n";
    $sql .= "                   FROM \n";
    $sql .= "                       t_payout_h \n";
