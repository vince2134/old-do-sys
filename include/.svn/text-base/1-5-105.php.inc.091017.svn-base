    }else
    if ($renew_type == "halfway"){
    $sql .= "                   AND \n";
    $sql .= "                       renew_flg = 't' \n";
    }
    $sql .= "                   AND \n";
    $sql .= "                       buy_id IS NULL \n";
    $sql .= "                   AND \n";
    $sql .= "                       pay_day >= '$monthly_renew_day' \n";
    $sql .= "                   AND \n";
