    }

    // エラーがない場合
    if ($err_flg != true){

        /****************************/
        // 発注商品IDを取得
        /****************************/
        for ($i = 0; $i < $match_count; $i++){
            if ($_POST["form_order_check"][$i] == 1){
                $order_goods_id[] = $page_data[$i][5];
