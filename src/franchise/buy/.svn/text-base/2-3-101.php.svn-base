/****************************/
// 発注ボタン押下処理
/****************************/
if ($_POST["order_button_flg"] == "true" && $_POST["form_show_button"] == null){

    // 未チェック時
    if (count($_POST["form_order_check"]) == 0){
        $form->setElementError("order_err1", "発注する商品を選択してください。");
